<section class="article">
	<div class="article__conteiner">
		<div class="article__info">
			<span class="article__date">{{item.data}}</span>
			<span class="article__type">
				{{item.icon}}
			</span>
		</div>
		<div class="article__box">
			<img class="article__img" src="{{item.img}}" alt="" />
			<h2 class="article__title">{{item.title}}</h2>
			<ul class="article__list">
				<li class="article__item">Posted by <span class="violet">Admin</span> in Phtography</li>
				<li class="article__item violet">
					<span class="light_blue"><i class="fa fa-tags" aria-hidden="true"></i></span>{{item.tag}}
				</li>
				<li class="article__item violet">
					<span class="light_blue"><i class="fa fa-comment" aria-hidden="true"></i></span>22
				</li>
			</ul>
			<p class="article__text">
				{{item.text}}
			</p>
			<a class="article__continue"href="#">{{item.more}}
			</a>
		</div>
	</div>
</section>
